<div class='lead'>

<h2>Here are the Art Pieces in: <%= @museum.name %></h2>
<br>
  <ul>
   <% @museum.artworks.each do |artwork| %>
    <li><a href="/artworks/<%= artwork.id %>"><%= artwork.description %></a></li>
   <% end %>
  </ul>
</div>

<br>
<div class='form-group'>

    <form action='/museums/<%= @museum.id %>' method='post'>

      <input id='id' name='id' type='hidden' value='<%= @museum.id %>'>

      <label for='description'><em>Add An Artwork to this Museum</em></label>

      <input id= 'description' name='description' type='text' required="true">
      <button type='submit' class=' btn btn-info'>Add ArtWork</button>
    </form>
</div>

<br>
<br>
<br>
<br>

<div class='form-group'>

  <form action='/museums/<%= @museum.id %>' method='post'>
      <input name='_method' type='hidden' value='patch'>

      <label for='name'><em> Rename Your Museum:</em></label>
      <input id='name' name='name' type='text' required="true">

      <button type='submit' class=' btn btn-info'> Update Museum </button>

    </form>
</div>

<div class="form-group">

    <form action='/' method='post'>
      <input name='_method' type='hidden' value='delete'>
      <input id='id' name='id' type='hidden' value='<%= @museum.id %>'>

      <button type="submit" class= ' btn btn-danger'>Delete Museum</button>
    </form>
</div>
<br>
